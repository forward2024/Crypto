<Page x:Class="WPF.Views.Frames.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF.Views.Frames"
      mc:Ignorable="d"
      Title="Home">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- ListBox вже має прокручування, тому ScrollViewer не потрібен -->
        <ListBox x:Name="CryptoList" ItemsSource="{Binding Currencies}" Grid.Column="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Rank}" Width="50"/>
                        <TextBlock Text="{Binding Name}" Width="200"/>
                        <TextBlock Text="{Binding Symbol}" Width="50"/>
                        <TextBlock Text="{Binding PriceUsd}" Width="100"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Текстовий блок у другій колонці -->
        <TextBlock Grid.Column="1" Text="Інший контент в нижній частині (30%)" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Page>
